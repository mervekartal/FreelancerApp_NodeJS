<%- include('partials/_header') -%>
    <%- include('partials/_navigation') -%>
    <section class="page-section portfolio mt-5" id="portfolio">
        <div class="container">
            <!-- Portfolio Section Heading-->
            <h3 class="page-section-heading text-center text-uppercase text-secondary mb-0">Portfolio Details</h3>
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>

            <div class="row">
                <div class="col-md-6 col-lg-6">
                    <img class="img-fluid text-right" src="/assets/img/portfolio/cabin.png" alt="..." />
                </div>   
                <div class="col-md-6 col-lg-6">
                    <h4><%= portfolio.title %></h4>
                    <p><%= portfolio.description %></p>
                    <div class="col-lg-8">
                        <a class="btn btn-warning" href="#" data-bs-toggle="modal" data-bs-target="#editPortfolio"><i class="fas fa-edit fa-fw"></i>Edit</a>
                        <a class="btn btn-danger" href="#" data-bs-toggle="modal" data-bs-target="#deletePortfolio"><i class="fas fa-xmark fa-fw"></i>Delete</a>        
                    </div>
                </div>
 
            </div>

            <!-- Update Modal Start -->
            <div class="modal fade" id="editPortfolio" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-body customer-box">
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="tab-pane active" id="Login">
                                    <form method="POST" action="/portfolios/<%=portfolio.slug %>?_method=PUT" class="form-horizontal">
                                        <div class="form-group mb-2">
                                            <div class="col-sm-12">
                                                <input type="text" name="title" class="form-control" value="<%=portfolio.title %>" placeholder="Portfolio Title">
                                            </div>
                                        </div>
                                        <div class="form-group mb-2">
                                            <div class="col-sm-12">
                                                <textarea rows="8" name="description" class="form-control"><%= portfolio.description %></textarea>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-10">
                                                <button type="submit" class="btn btn-primary btn-radius btn-brd grd1">
                                                    Save
                                                </button>
                                                <button type="submit" class="btn btn-secondary btn-radius btn-brd grd1"
                                                    data-dismiss="modal" aria-hidden="true">
                                                    Cancel
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Update Modal End -->

            <!-- Delete Modal Start-->
            <div class="modal" id="deletePortfolio" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                <form method="POST" action="/portfolios/<%= portfolio.slug %>?_method=DELETE" class="form-horizontal">

                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title">Delete Portfolio</h5>
                    </div>
                    <div class="modal-body">
                      <p>Are you sure you want to delete <b><%= portfolio.title %></b>?</p>
                    </div>
                    <div class="modal-footer">
                      <button type="submit" class="btn btn-danger btn-radius btn-brd grd1">Yes, I'm</button>
                      <button type="button" class="btn btn-secondary btn-radius btn-brd grd1" data-bs-dismiss="modal" aria-label="Close">Cancel</button>
                    </div>
                  </div>

                </form>
                </div>
            </div>
              <!-- Delete Modal Start-->


            <!-- Portfolio Grid Items-->
            <div class="row justify-content-center">
                <!-- Portfolio Item 1-->
                <div class="col-md-6 col-lg-4 mb-5">
                    <div class="portfolio-item mx-auto" data-bs-toggle="modal" data-bs-target="#portfolioModal1">
                        <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                            <div class="portfolio-item-caption-content text-center"><span><%= portfolio.title %></span></div>
                        </div>
                        <!-- <img class="img-fluid" src="assets/img/portfolio/cabin.png" alt="..." /> -->
                    </div>
                </div>

            </div>
        </div>
    </section>
<%- include('partials/_footer') -%>